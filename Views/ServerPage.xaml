<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MCE_API_SERVER.Views.ServerPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Black">
            <Button Text="Start" Clicked="Btn_StartStop_Clicked" BackgroundColor="Green"/>
            <ScrollView Grid.Column="8" Grid.Row="8" HorizontalScrollBarVisibility="Always" VerticalOptions="StartAndExpand">
                <StackLayout x:Name="Console">
                </StackLayout>
            </ScrollView>
            <Button Text="Clear" VerticalOptions="End" Clicked="Btn_Clear_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>